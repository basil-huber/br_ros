config BR2_PACKAGE_BOOST_FOR_ROSCPP
	bool
	select BR2_PACKAGE_BOOST_DATE_TIME
	select BR2_PACKAGE_BOOST_THREAD
	select BR2_PACKAGE_BOOST_SYSTEM

config BR2_PACKAGE_ROSCPP
	bool "framework cpp"
	depends on BR2_PACKAGE_ROS_FRAMEWORK
	select BR2_PACKAGE_BOOST_FOR_ROSCPP
	select BR2_PACKAGE_MESSAGE_RUNTIME
	select BR2_PACKAGE_ROSCPP_CPPCOMMON
	select BR2_PACKAGE_ROSCPP_ROSCPP_SERIALIZATION
	select BR2_PACKAGE_ROSCPP_ROSCPP_TRAITS
	select BR2_PACKAGE_ROSCPP_ROSTIME

config BR2_PACKAGE_MESSAGE_RUNTIME
	bool
	depends on BR2_PACKAGE_ROSCPP

config BR2_PACKAGE_ROSCPP_CPPCOMMON
	bool
	depends on BR2_PACKAGE_ROSCPP
	depends on BR2_PACKAGE_CONSOLE_BRIDGE

config BR2_PACKAGE_ROSCPP_ROSTIME
	bool
	depends on BR2_PACKAGE_ROSCPP

config BR2_PACKAGE_ROSCPP_ROSCPP_SERIALIZATION
	bool
	depends on BR2_PACKAGE_ROSCPP
	select BR2_PACKAGE_ROSCPP_ROSCPP_TRAITS

config BR2_PACKAGE_ROSCPP_ROSCPP_TRAITS
	bool
	depends on BR2_PACKAGE_ROSCPP
