config BR2_PACKAGE_ROS
	bool "ROS: Robot OS"
	depends on BR2_PACKAGE_PYTHON

config BR2_PACKAGE_ROS_DEVTOOLS
	bool "devtools: Host tools for ROS distribution"
	depends on BR2_PACKAGE_ROS
	select BR2_PACKAGE_PYTHON_BSON
	select BR2_PACKAGE_PYTHON_DATEUTIL
	select BR2_PACKAGE_PYTHON_DEFUSEDXML
	select BR2_PACKAGE_PYTHON_EMPY
	select BR2_PACKAGE_PYTHON_FUTURE
	select BR2_PACKAGE_PYTHON_PBR
	select BR2_PACKAGE_PYTHON_PYPARSING
	select BR2_PACKAGE_PYTHON_SIX
	select BR2_PACKAGE_PYTHON_ECDSA
	select BR2_PACKAGE_PYTHON_NETIFACES
	select BR2_PACKAGE_PYTHON_PARAMIKO
	select BR2_PACKAGE_PYTHON_PYCURL
	select BR2_PACKAGE_PYTHON_PYPROJ
	select BR2_PACKAGE_PYTHON_VCSTOOLS
	select BR2_PACKAGE_PYTHON_WSTOOL
	select BR2_PACKAGE_CATKIN
	select BR2_PACKAGE_CMAKE_MODULES

menu "Devtools"
	depends on BR2_PACKAGE_ROS_DEVTOOLS

	source "$BR2_EXTERNAL_ROS_PATH/package/python-rosdep/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-catkin-pkg/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-rospkg/Config.in"
endmenu

config BR2_PACKAGE_ROS_PLUGINS
	bool "plugins: Target framework for ROS distribution"
	depends on BR2_PACKAGE_ROS

menu "Plugins"
	depends on BR2_PACKAGE_ROS_PLUGINS

	source "$BR2_EXTERNAL_ROS_PATH/package/rospack/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/ros/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/console-bridge/Config.in"
endmenu

menu "Python packages"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-empy/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-bson/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-defusedxml/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-future/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-pbr/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-vcstools/Config.in"
	source "$BR2_EXTERNAL_ROS_PATH/package/python-wstool/Config.in"
endmenu

